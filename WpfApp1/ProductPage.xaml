<Page x:Class="Vosmerka.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vosmerka"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Orientation="Horizontal">
                <TextBlock Text="Поиск: "
                         VerticalAlignment="Center"/>
                <TextBox Width="250"
                       Height="28"
                       Name="SearchTextBox"
                       TextChanged="SearchTextBox_TextChanged"
                       VerticalContentAlignment="Center"
                       Margin="10,0,0,0"/>
            </StackPanel>
            <StackPanel Grid.Column="1"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Orientation="Horizontal">
                <TextBlock Text="Сортировка: "
                         VerticalAlignment="Center"/>
                <ComboBox Width="200"
                        Name="SortComboBox"
                        SelectionChanged="SortComboBox_SelectionChanged">
                    <ComboBoxItem>Все</ComboBoxItem>
                    <ComboBoxItem>По возрастанию</ComboBoxItem>
                    <ComboBoxItem>По убыванию</ComboBoxItem>
                </ComboBox>
                <TextBlock Text="Фильтрация: "
                         VerticalAlignment="Center"
                         Margin="5,0,4,0"/>
                <ComboBox Width="200"
                        Name="FilterComboBox"
                        SelectionChanged="FilterComboBox_SelectionChanged">
                    <ComboBoxItem>Все типы</ComboBoxItem>
                    <ComboBoxItem>Колесо</ComboBoxItem>
                    <ComboBoxItem>Запаска</ComboBoxItem>
                    <ComboBoxItem>Шина</ComboBoxItem>
                    <ComboBoxItem>Диск</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <ListView Name="ProductList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Background="{Binding GetBackColor}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <Image Width="150"
                                     Height="150"
                                     Source="{Binding GetPicture}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                      Margin="10,5,0,0">
                                <Label Content="{Binding TitleProduct}" ContentStringFormat="Наименование: {0}"/>
                                <Label Content="{Binding Article}" ContentStringFormat="Арктикул: {0}"/>
                                <Label Content="{Binding TypeProduct.Title}" ContentStringFormat="Тип продукта: {0}"/>
                                <Label Content="{Binding WorkshopNumberForPeoduct}" ContentStringFormat="Номер производственного цеха: {0}"/>
                                <Label Content="{Binding MinimumCostForAnAgent}" ContentStringFormat="Минимальная стоимость: {0}"/>
                                <Label Content="{Binding Description}" ContentStringFormat="Описание: {0}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Right"
                      Margin="0,0,10,0">
                <Button FontFamily="Webdings"
                      Content="3"
                      Width="20"
                      Click="btnPrevious_Click"/>
                <TextBlock Text="1"
                         FontFamily="Comic Sans MS"
                         Name="txbCountList"
                         Margin="10,0,10,0"/>
                <Button FontFamily="Webdings"
                      Content="4"
                      Width="20"
                      Click="btnNext_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="3">
            <StackPanel HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Orientation="Horizontal">
                <Button Style="{StaticResource ResourceKey=funcButtonStyle}"
                      Content="Редактировать"
                      Click="EditButton_Click"/>
                <Button Style="{StaticResource ResourceKey=funcButtonStyle}"
                      Content="Добавить"
                      Click="CreateButton_Click"
                      Margin="10,0,10,0"/>
                <Button Style="{StaticResource ResourceKey=funcButtonStyle}"
                      Content="Удалить"
                      Click="RemoveButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
